                        <CommandUIHandlers>
                            <CommandUIHandler Command="SLK_AssignSite" 
                                CommandAction="~site/_layouts/SharePointLearningKit/Actions.aspx?Action=AssignSite&amp;ListId={ListId}&amp;ItemId={SelectedItemId}"
